-- ee.gno --
package ee

import (
	"std"
)

const (
	EventSender = "sender"
	EventReceiver = "receiver"
)

func Sender() {
	std.Emit(
		EventSender,
		[]string{
			"key1", "value1",
			"key2", "value2",
			"key3", "value3",
			"not-a-pair",		// ignore the key-value not in pairs
		},
	)
}

func Receiver() {
	std.Emit(
		EventReceiver,
		[]string{
			"foo", "bar",
		},
	)
}
