-- cbee.gno --
package cbee

import (
    "std"
)

const (
	sender = "sender"
	receiver = "receiver"
)

type contractA struct{}

func (c *contractA) sender(cb func()) {
	subSender()
	cb()
}

func subSender() {
	std.Emit(sender, "k1", "v1", "k2", "v2")
}

type contractB struct{}

func (c *contractB) subReceiver() {
	std.Emit(receiver, "bar", "baz")
}

func Foo() {
    a := &contractA{}
	b := &contractB{}

	a.sender(func() {
		b.subReceiver()
	})
}
